{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "lib": ["es5", "es6", "dom", "es2017.object"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "outDir": "dist",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2020",
        "declaration": true,
        "declarationDir": "dist"
    },
    "ts-node": {
        "esm": true
    },
    "exclude": ["node_modules/**/*"],
    "include": [
        "abi/*.ts",
        "use-cases/*.ts"
    ]
}
